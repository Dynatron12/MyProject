<script>
    function onCurrencyValueChange() {
        //alert
        var data = { selectedCurrency: $('#CurrencyId').val() };
        $.ajax({
            type: "POST",
            url: 'Home/SaveToSession',
            data: data
        });
    }

    function onBuyButtomClick() {
        //alert
        var data = @ViewBag.CurrentAccount.AccountId;
        $.ajax({
            type: "POST",
            url: 'Home/RedirectToBank',
            data: data
        });
    }
</script>
